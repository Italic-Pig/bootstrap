<Window x:Class="ItalicPig.Bootstrap.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:ItalicPig.Bootstrap.View"
        xmlns:vm="clr-namespace:ItalicPig.Bootstrap.ViewModel"
        mc:Ignorable="d"
        Title="Italic Pig Bootstrap" Width="500" Height="500">
    <Window.DataContext>
        <vm:ProjectCollection />
    </Window.DataContext>

    <TabControl ItemsSource="{Binding Projects}" SelectedItem="{Binding SelectedProject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        <TabControl.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Name}"/>
            </DataTemplate>
        </TabControl.ItemTemplate>
        <TabControl.ContentTemplate>
            <DataTemplate>
                <v:ProjectPanel Margin="5,10" />
            </DataTemplate>
        </TabControl.ContentTemplate>
    </TabControl>
</Window>
